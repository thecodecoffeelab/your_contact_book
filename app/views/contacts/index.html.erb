<% if user_signed_in? %>

<div class="card">
  <div class="card-header">
    <h1>Contact Book</h1>
  </div>
  <div class="card-body">
    <h5 class="card-title">Welcome! Create your contact book now </h5> 
    <p class="card-text">
      <div id="contacts">

  <% @contacts.each do |contact|  %>
  
    <% if contact.user == current_user %>
    <%= render contact %>
    <p>
      <%= link_to "Actions", contact, class:"btn btn-dark" %>
    </p>
    <% end %>
  <% end %>
</div>

<%= link_to "Create a contact", new_contact_path, class:"btn btn-outline-success" %>
    </p>
  </div>
</div>
<% end %>

<% if !user_signed_in? %>
<h1>The Code Coffee Lab - A contact book app based on Ruby on Rails</h1>
<h1>Usage:</h1>
<p>Register to create your own contact book, view your contact list, update a contact info or cancel your account.</p>

<p>If you like the project, please give it a star on GitHub:  <a href="#" target="_blank">Download it now!</a>.</p>

<%= link_to "Get started now!", new_user_registration_path, class:"btn btn-outline-success" %>
<%end%>
